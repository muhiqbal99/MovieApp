<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SubmissionBAJP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SubmissionBAJP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cornerSize">@dimen/_6sdp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">3dp</item>
        <item name="android:layout_marginStart">@dimen/_6sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_6sdp</item>
        <item name="android:layout_marginEnd">@dimen/_6sdp</item>
    </style>
</resources>